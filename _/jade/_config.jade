mixin header(page)
  header
    .topbar
      .container(data-sr)
        +socials
        nav: +navigation(page,menu)
        
    #header
      if(page=="haste")
        .container.haste
          +logo(logoAlt,titulo,dominio)
          .logoB(data-sr="enter top"): img(src="_/img/logo_haste.png", alt="Haste")
          nav(data-sr="enter top"): +navigation(page,menu2)
      else if(page=="lifetrak")
        .container.lifetrak
          +logo(logoAlt,titulo,dominio)
          .logoB(data-sr="enter top"): img(src="_/img/logo_lifetrak.png", alt="LifeTrak")
          nav(data-sr="enter top"): +navigation(page,menu2)
      else if(page=="asics")
        .container.asics
          +logo(logoAlt,titulo,dominio)
          .logoB(data-sr="enter top"): img(src="_/img/logo_asics.png", alt="Asics")
          nav(data-sr="enter top"): +navigation(page,menu2)
      else 
        .container
          +logo(logo,titulo,dominio)
          nav(data-sr="enter top"): +navigation(page,menu2)


mixin socials
  .socials
    a(href="http://twitter.com/targetsteele", target="_blank"): i.fa.fa-twitter
    a(href="http://facebook.com/targetsteele", target="_blank"): i.fa.fa-facebook





